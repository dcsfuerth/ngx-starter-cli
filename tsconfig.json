{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "lib": ["es2017", "dom"],
    "plugins": [{ "name": "tslint-language-service" }]
  }
}
