{
  "name": "ngx-starter-cli",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng serve --hmr --aot",
    "watch:jit": "ng serve --hmr",
    "backend:mock": "json-server mock/db.json --port 3001 --delay 500",
    "build": "ng build",
    "build:ngx-tools": "ng build @dcs/ngx-tools --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:cleanup": "jest --clearCache",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged",
    "prepush": "run-s build:production",
    "docs": "compodoc -p src/tsconfig.app.json --silent",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "compile:production": "ng build --prod --stats-json",
    "build:production": "run-s lint test:coverage compile:production docs",
    "serve:production": "ws --port 8080  --compress --directory dist/ngx-starter-cli --spa index.html",
    "stats:production": "webpack-bundle-analyzer dist/ngx-starter-cli/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.6",
    "@angular/common": "^6.0.6",
    "@angular/compiler": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/forms": "^6.0.6",
    "@angular/http": "^6.0.6",
    "@angular/platform-browser": "^6.0.6",
    "@angular/platform-browser-dynamic": "^6.0.6",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.0.6",
    "@angular/service-worker": "^6.0.6",
    "@dcs/ngx-tools": "^3.4.0",
    "@ngrx/effects": "^6.0.1",
    "@ngrx/router-store": "^6.0.1",
    "@ngrx/store": "^6.0.1",
    "@ngrx/store-devtools": "^6.0.1",
    "bootstrap": "^4.1.1",
    "core-js": "^2.5.4",
    "fast-json-stable-stringify": "^2.0.0",
    "font-awesome": "^4.7.0",
    "md5": "^2.2.1",
    "ngrx-store-localstorage": "^5.0.0",
    "ngx-bootstrap": "^3.0.1",
    "normalizr": "^3.2.4",
    "ramda": "^0.25.0",
    "rxjs": "^6.2.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.6",
    "@angular/language-service": "^6.0.6",
    "@angularclass/hmr": "^2.1.3",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@compodoc/compodoc": "^1.1.3",
    "@ngrx/schematics": "^6.0.1",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "^2.0.3",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "@types/ramda": "github:types/npm-ramda#dist",
    "codelyzer": "^4.4.2",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "fast-safe-stringify": "^2.0.4",
    "husky": "^0.14.3",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^23.1.0",
    "jest-preset-angular": "^5.2.2",
    "json-server": "^0.14.0",
    "lint-staged": "^7.2.0",
    "local-web-server": "^2.5.2",
    "ngrx-store-logger": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "protractor": "~5.3.0",
    "ts-node": "~7.0.0",
    "tsickle": "^0.30.0",
    "tslib": "^1.9.3",
    "tslint": "~5.10.0",
    "typescript": "~2.7.2",
    "webpack-bundle-analyzer": "^2.13.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setup-jest.ts",
    "coverageDirectory": "report/coverage",
    "collectCoverageFrom": [
      "projects/**/*.ts",
      "src/app/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  }
}
