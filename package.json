{
  "name": "ngx-starter-cli",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run watch",
    "watch": "ng serve --hmr",
    "watch:jit": "ng serve --hmr --aot false",
    "backend:mock": "json-server mock/db.json --port 3001 --delay 500",
    "test": "jest",
    "test:only": "jest $(grep -rl '\\.only' src)",
    "test:watch": "jest --watch --notify",
    "test:coverage": "jest --coverage --runInBand",
    "test:cleanup": "jest --clearCache",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "docs": "compodoc -p src/tsconfig.app.json --silent",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "compile:production": "ng build --prod --stats-json",
    "build:production": "run-s lint test:coverage compile:production docs",
    "serve:production": "ws --port 8080  --compress --directory dist/ngx-starter-cli --spa index.html --static.maxage 31536000",
    "stats:production": "webpack-bundle-analyzer dist/ngx-starter-cli/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.9",
    "@angular/common": "^6.1.9",
    "@angular/compiler": "^6.1.9",
    "@angular/core": "^6.1.9",
    "@angular/forms": "^6.1.9",
    "@angular/http": "^6.1.9",
    "@angular/platform-browser": "^6.1.9",
    "@angular/platform-browser-dynamic": "^6.1.9",
    "@angular/pwa": "^0.8.4",
    "@angular/router": "^6.1.9",
    "@angular/service-worker": "^6.1.9",
    "@dcs/ngx-tools": "^4.0.2",
    "@ng-bootstrap/ng-bootstrap": "^3.3.0",
    "@ngrx/effects": "^6.1.0",
    "@ngrx/router-store": "^6.1.0",
    "@ngrx/store": "^6.1.0",
    "@ngrx/store-devtools": "^6.1.0",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "json-stable-stringify": "^1.0.1",
    "md5": "^2.2.1",
    "ngrx-store-localstorage": "^5.1.0",
    "normalizr": "^3.2.4",
    "ramda": "^0.25.0",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.8.4",
    "@angular/cli": "^6.2.4",
    "@angular/compiler-cli": "^6.1.9",
    "@angular/language-service": "^6.1.9",
    "@angularclass/hmr": "^2.1.3",
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@compodoc/compodoc": "^1.1.5",
    "@dcs/schematics": "^1.2.1",
    "@ngrx/schematics": "^6.1.0",
    "@types/jasmine": "^2.8.9",
    "@types/jasminewd2": "^2.0.5",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "codelyzer": "^4.5.0",
    "commitizen": "^3.0.2",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.1",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "jest-watch-typeahead": "^0.2.0",
    "json-server": "^0.14.0",
    "lint-staged": "^7.3.0",
    "local-web-server": "^2.6.0",
    "ngrx-store-logger": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "protractor": "^5.4.1",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.1.1",
    "webpack-bundle-analyzer": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "run-s build:production"
    }
  }
}
